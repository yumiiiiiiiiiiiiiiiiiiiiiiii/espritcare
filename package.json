{
  "name": "esprit-care-static",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:tw": "npx tailwindcss -i ./src/input.css -o ./src/tw.css --watch",
    "sass:build": "sass styles.scss public/scss.css --style=expanded",
    "sass:watch": "sass --watch styles.scss:public/scss.css --style=expanded",
    "format:map": "node scripts/formatMap.js",
    "minify:map": "node scripts/minifyMap.js",
    "postcss:build": "postcss public/scss.css -o public/scss.css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "sass": "^1.96.0",
    "tailwindcss": "^3.4.19"
  }
}
